@model Product
  <!-- ##### Header Area Start ##### -->
  <header class="header_area">
    <div class="classy-nav-container breakpoint-off d-flex align-items-center justify-content-between">
        <!-- Classy Menu -->
        <nav class="classy-navbar" id="essenceNav">
            <!-- Logo -->
            <a class="nav-brand" href="/" style="color: blue;">Swapy</a>
            <!-- Navbar Toggler -->
            <div class="classy-navbar-toggler">
                <span class="navbarToggler"><span></span><span></span><span></span></span>
            </div>
            <!-- Menu -->
            <div class="classy-menu">
                <!-- close btn -->
                <div class="classycloseIcon">
                    <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                </div>
                <!-- Nav Start -->
                <div class="classynav">
                    <ul>
                        <li><a href="#">Categories</a>
                            <div class="megamenu d-flex">
                                <ul class="single-mega cn-col-4">
                                    <li class="title"><a href="#">Clothes</a></li>
                                </ul>
                                <ul class="single-mega cn-col-4">
                                   <li class="title"><a href="#">Games & Toys</a></li>
                                </ul>
                                <ul class="single-mega cn-col-4">
                                    <li class="title"><a href="#">Sports Products</a></li>
                                </ul>
                                <ul class="single-mega cn-col-4">
                                    <li class="title"><a href="#">Electronics</a></li>
                                </ul>
                                <div class="single-mega cn-col-4">
                                    <img src="/img/bg-img/swapy.png" alt="">
                                </div>
                            </div>
                        </li>
                        <li><a href="#">Pages</a>
                            <ul class="dropdown">
                                <li><a href="/">Home</a></li>
                                 @if (Context.Session.GetInt32("userId")!=null) {

                                <li><a href="/profile/@Context.Session.GetInt32("userId")">Profile</a></li>
                                 }
                                <li><a href="#">Products</a></li>
                                <li><a href="/about">About us</a></li>
                                <li><a href="#cont">Contact</a></li>
                            </ul>
                        </li>
                        <li><a href="/about">About us</a></li>
                        <li><a href="#cont">Contact</a></li>
                    </ul>
                </div>
                <!-- Nav End -->
            </div>
        </nav>
        <!-- Header Meta Data -->
        <div class="header-meta d-flex clearfix justify-content-end">
            <!-- Search Area -->
            <div class="search-area">
                <form action="#" method="post">
                    <input type="search" name="search" id="headerSearch" placeholder="Type for search">
                    <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                </form>
            </div>
            <!-- Favourite Area -->
            <!-- User Login Info -->
              @if (Context.Session.GetInt32("userId")!=null)
                        {
                            
            <div class="user-login-info">
                <a href="/profile/@Context.Session.GetInt32("userId")"><img src="/img/core-img/user.svg" alt="">Profile</a>
            </div>

            <div class="cart-area">
                <a href="#" id="essenceCartBtn"><img src="/img/core-img/bag.svg" alt=""> Card<span>3</span></a>
            </div>
                        }
            <!-- Cart Area -->
            <div class="favourite-area">
                @if (Context.Session.GetInt32("userId") == null)
                        {
                            <a href="/login"><img src="/img/core-img/log1.jpg"> login</a>

                        }
                        else
                        {
                            <a href="/logout"><img src="/img/core-img/log1.jpg"> Lougout</a>
                        }
            </div>
        </div>
    </div>
</header>
<!-- ##### Header Area End ##### -->
<!-- ##### Right Side Cart Area ##### -->
<div class="cart-bg-overlay"></div>
<div class="right-side-cart-area">
    <!-- Cart Button -->
    <div class="cart-button">
        <a href="#" id="rightSideCart"><img src="/img/core-img/bag.svg" alt=""> <span>3</span></a>
    </div>
    <div class="cart-content d-flex">
        <!-- Cart List Area -->
        <partial name="_Card"/>
    </div>
</div>
<!-- ##### Right Side Cart End ##### -->
<!-- ##### Welcome Area Start ##### -->
<section class="welcome_area bg-img background-overlay" style="background-image: url(/img/bg-img/c.jpg);  ">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="hero-content">
                    <h2 style=" color: dodgerblue; border-radius: 15px;">Swapy</h2>
                    <h1 style="color: white;">Save more  Spend Less</h1> <br>
                    <a href="/about" class="btn essence-btn">About Us</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### Welcome Area End ##### -->
<!-- ##### Top Catagory Area Start ##### -->
<div class="top_catagory_area section-padding-80 clearfix">
    <div class="container">
        <div class="row justify-content-center">
            <!-- Single Catagory -->
            @foreach (var p in ViewBag.ALLcategories)
            {
                <div class="col-12 col-sm-6 col-md-4">
                    <div class="single_catagory_area d-flex align-items-center justify-content-center bg-img" style="background-image: url(/img/bg-img/swapy.png);">
                        <div class="catagory-content">
                            <a href="/ShowCat/@p.CategoryId">@p.Name</a>
                        </div>
                    </div>
                </div>
            }
    </div>
</div>
<!-- ##### Top Catagory Area End ##### -->
<!-- ##### CTA Area Start ##### -->
<div class="cta-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="cta-content bg-img background-overlay" style="background-image: url(/img/bg-img/sell.jpg);">
                    <div class="h-100 d-flex align-items-center justify-content-end">
                        <div class="cta--text">
                            <h2 style="color: white;">Sell Your Way</h2> <br>
                            <h5 style="background-color: black; color: white; border-radius: 10px; ">Sell a few items or build your empire. <br> Whatever your vibe we’ll share our pro tips <br> to help you get there. It's simple to get started.</h5> <br>
                             @if (Context.Session.GetInt32("userId")!=null){
                                 <a href="/add" class="btn essence-btn">Sell On Swapy</a>
                             }
                             else{
                            <a href="/login" class="btn essence-btn">Sell On Swapy</a>

                             }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### CTA Area End ##### -->
<!-- ##### New Arrivals Area Start ##### -->
<!-- ##### New Arrivals Area Start ##### -->
<section class="new_arrivals_area section-padding-80 clearfix">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading text-center">
                    <h2>Popular Products</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="popular-products-slides owl-carousel">
                    <!-- Single Product -->
                     @* loop  *@
                     @foreach (Product p in ViewBag.AllProducts)
                     {
                    <div class="single-product-wrapper">
                        <!-- Product Image -->
                        <div class="product-img">
                            <img src="@p.Image" alt="">
                            <!-- Hover Thumb -->
                            <img class="hover-img" src="@p.Image" alt="">
                            <!-- Favourite -->
                            <div class="product-favourite">
                                <h5 href="#" class="favme fa fa-heart">@p.Quantity</h5>
                            </div>
                        </div>
                        <!-- Product Description -->
                        <div class="product-description">
                            <span>topshop</span>
                            <a href="#">
                                <h6>@p.Description</h6>
                            </a>
                            <p class="product-price">@p.Price </p>
                            <!-- Hover Content -->
                            <div class="hover-content">
                                <!-- Add to Cart -->
                                <div class="add-to-cart-btn">
                                    <a href="#" class="btn essence-btn">Add to Cart</a> <br> 
                                    <a href="/swap" class="btn essence-btn">Ask to Swap</a> <br>
                                </div> <br>
                            </div>
                        </div>
                    </div>
                     }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### New Arrivals Area End ##### -->
